@model EncuestasUSAM.Models.PROYECTOcrudUpdate
@{
    ViewBag.Title = "Actualizar";
}

<br />
<div class="container">
    <h2>Actualizar Proyecto</h2>

    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Actualizar", "Proyecto", FormMethod.Post, new { role = "form", @class = "" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationMessage("error", new { @class = "tex-danger" })

                <div class="form-group">
                    @Html.HiddenFor(d => d.ID)
                    @Html.AntiForgeryToken()
                    @Html.ValidationMessage("error", new { @class = "text-danger" })
                </div>
                <div class="col-xs-6">
                    @Html.LabelFor(d => d.NOMBRE_PROYECTO)
                    @Html.TextBoxFor(d => d.NOMBRE_PROYECTO, new { @class = "form-control", @placeholder = "Nombre" })
                    @Html.ValidationMessage("NOMBRE_PROYECTO", new { @class = "text-danger" })
                    <br />
                </div>
                <div class="col-xs-6">
                    @Html.LabelFor(d => d.DESCRIPCION)
                    @Html.TextAreaFor(d => d.DESCRIPCION, new { @class = "form-control" })
                    @Html.ValidationMessage("DESCRIPCION", new { @class = "text-danger" })
                    <br />
                </div>

                <div class="col-xs-6">
                    @Html.LabelFor(d => d.ID_TIPO_INVESTIGACION)
                    @Html.DropDownListFor(d => d.ID_TIPO_INVESTIGACION, ViewBag.TipoInvestiga as SelectList, "selecciona Tipo de Investigación", new { @class = "form-control" })
                    @Html.ValidationMessage("ID_TIPO_INVESTIGACION", new { @class = "text-danger" })
                    <br />
                </div>
                <div class="col-xs-6">
                    @Html.LabelFor(d => d.ID_MATERIA)
                    @Html.DropDownListFor(d => d.ID_MATERIA, ViewBag.Materia as SelectList, "selecciona una Materia", new { @class = "form-control" })
                    @Html.ValidationMessage("ID_MATERIA", new { @class = "text-danger" })
                    <br />
                </div>
                <div class="col-xs-6">
                    @Html.LabelFor(d => d.ID_DISENIO_INVESTIGACION)
                    @Html.DropDownListFor(d => d.ID_DISENIO_INVESTIGACION, ViewBag.DisenioInvestigacion as SelectList, "selecciona un Diseño de investigación", new { @class = "form-control" })
                    @Html.ValidationMessage("ID_DISENIO_INVESTIGACION", new { @class = "text-danger" })
                    <br />
                </div>
                <div class="col-xs-6">
                    @Html.LabelFor(d => d.FECHA_ASIGNACION)
                    @Html.TextBox("FECHA_ASIGNACION",Model.FECHA_ASIGNACION, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
                    @Html.ValidationMessage("FECHA_ASIGNACION", new { @class = "text-danger" })
                    <br />
                </div>
                <div class="col-xs-6">
                    @Html.LabelFor(d => d.ID_GRUPO_ALUMNO)
                    @Html.DropDownListFor(d => d.ID_GRUPO_ALUMNO, ViewBag.GrupoAlumno as SelectList, "selecciona un Grupo", new { @class = "form-control" })
                    @Html.ValidationMessage("ID_GRUPO_ALUMNO", new { @class = "text-danger" })
                    <br /><br />
                </div>
               
                <div style="text-align:center" class="col-xs-10">
                    <input type="submit" class="btn btn-primary" value="Actuaizar" />

                </div>

            }
        </div>
    </div>
</div>