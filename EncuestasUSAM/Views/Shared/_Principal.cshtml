<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Encuestas USAM</title>
    @Styles.Render("~/Content/CssBootstrap")
    @Styles.Render("~/Content/CssWizardBootstrap")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
             </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Session["Usuario"] != null)
                    {
                        @Html.ActionLink("Bienvenido ," + @HttpContext.Current.Session["Usr"].ToString(), "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

                    }
                    else
                    {
                        @Html.ActionLink("Modulo ADMIN", "Index", "Home", new { area = "" }, new { @class = "navbar-brand glyphicon glyphicon-user" })
                    }
                    <li>@Html.ActionLink("Ciclo", "Consultar", "CICLO")</li>
                    <li>@Html.ActionLink("Coordinador", "Consultar", "Coordinador")</li>
                    <li>@Html.ActionLink("Docente", "Consultar", "Docente")</li>
                    <li>@Html.ActionLink("Materia", "Consultar", "Materias")</li>
                    <li>@Html.ActionLink("Proyecto", "Consultar", "Proyecto")</li>                    
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li style="font-size:1em;color:whitesmoke">@Html.ActionLink(" ", "CerrarSesion", "Salir", new { @class = "glyphicon glyphicon-log-in" }) </li>
                </ul>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>

</body>
@Scripts.Render("~/Scripts/JQuery3.4.0")
@Scripts.Render("~/Scripts/JsBootstrap")
@Scripts.Render("~/Scripts/JsWizardBootstrap")
@Scripts.Render("~/Scripts/JQueryVal")
@Scripts.Render("~/Scripts/JQueryMaskedinput")
@RenderSection("scripts", required: false)
</html>
