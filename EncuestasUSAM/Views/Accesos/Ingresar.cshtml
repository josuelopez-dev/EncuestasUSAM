
@{
    ViewBag.Title = "Ingresar";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<div class="split-screen">
    <div class="left">
        <section class="copy">
            <h1>Formamos Ganadores</h1>
            <p>Universidad Salvadoreña Alberto Masferrer</p>
        </section>
    </div>
    <div class="right">
        <form action="@Url.Content("~/Accesos/Ingresar")" method="post">
            <div style="text-align:center;">
                @ViewBag.Error
            </div>
            <section class="copy">
                <h2>Inicio de Sesión</h2>
            </section>
            <div class="input-container email">
                <input type="text"  name="user" placeholder="Usuario" />
             </div>
            <div class="input-container">
                <input type="password" name="password" placeholder="Password" />
                <i class="fas fa-eye-slash"></i>
            </div>
            <button class="signup-btn" type="submit">Ingresar</button>
            <section class="copy legal">
                <p>
                    <span class="small">
                        Universidad Salvadoreña Alberto Masferrer <br />
                        <a href="#">&copy; @DateTime.Now.Year </a>&amp;<a href="#">
                            Derechos Reservados
                        </a>
                    </span>
                </p>
            </section>
        </form>
</div>
</div>
